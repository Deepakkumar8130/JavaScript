


<div class="container">
    <div class="row">
        <div  class="col-12">
            <button type="button" id="addbtn" class="btn btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Add Book
            </button>
            <table id="tbl_book">
                <thead class="bg-dark text-light">
                    <tr>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Author</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content ">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Add new Book</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                        <form>
                            <input type="hidden" id="txtId" />
                            <div class="form-group">
                                <label>Book Title</label>
                                <input type="text" class="form-control" id="txtTitle" />
                            </div>

                            <div class="form-group">
                                <label>Book Price</label>
                                <input type="number" class="form-control" id="txtPrice" />
                            </div>

                            <div class="form-group">
                                <label>Author</label>
                                <input type="text" class="form-control" id="txtAuthor" />
                            </div>

                            <div class="form-group mt-3">
                                <input type="button" class="btn btn-info" id="btnSubmit" value="Submit" />
                            </div>

                            <div class="form-group mt-3">
                                <p id="msg"></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            @*  <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
            </div> *@
        </div>
    </div>
</div>
